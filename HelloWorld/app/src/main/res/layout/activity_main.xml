<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Hello World!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/txv_nome" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="192dp" app:layout_constraintBottom_toTopOf="@+id/btn_resultado"
            android:layout_marginTop="450dp"/>
    <Button
            android:text="Clique aqui!"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/btn_resultado"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txv_nome" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="288dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="150dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp"/>

</android.support.constraint.ConstraintLayout>